<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="example.shuyu.recycler.kotlin">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--*****************************************************-->
        <activity
            android:name=".bind.activity.BindRefreshLoadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bind.activity.BindHorizontalRefreshLoadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bind.activity.BindHorizontalGridActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bind.activity.BindNormalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bind.activity.BindStaggeredRefreshLoadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bind.activity.BindHorizontalStaggeredRefreshLoadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bind.activity.BindEmptyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bind.activity.BindGridActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bind.activity.BindDragSwipeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bind.BindHomeActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>
